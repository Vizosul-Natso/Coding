package strings;

import java.util.Scanner;

//Check Palindrome
public class Palindrome {
	public static void main(String[] args) {
		
		String s1, s2 = "";
		Scanner sc = new Scanner(System.in);
		
		System.out.println("Enter a String");
		s1 = sc.next();
		
		int l = s1.length();
		
		System.out.println(l);
		
		for(int i = l-1 ; i>=0 ; i--) {
			s2 = s2 + s1.charAt(i);
		}
			
//		The .equals() method is used to compare the contents of two objects for equality.
//		'==' When used with reference variables (like objects), it checks if both references point to the same memory location (i.e., it checks if they are the same object).
		if(s1.equals(sc)) {
			System.out.println("Palindrome");
		}else {
			System.out.println("Not Palindrome");
		}
	}

}
