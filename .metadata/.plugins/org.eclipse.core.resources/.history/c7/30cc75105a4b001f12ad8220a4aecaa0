package patterns;

public class Pattern11 {
	
	public static void main(String[] args) {
		
		int n = 4;
		int i = 1;

		while(i <= n) {
			
			int s = 1;
			while(s <= n - i) {
				System.out.print(" ");
				s = s + 1;
			}
			
			int star = 1;
			while(star <= i) {
				System.out.print("*");
				star = star + 1;
			}
			
			System.out.println();
			i = i + 1;
		}
		int k = 1;
		while(k <= n) {
			
			int s = n - 1;
			int x = 1;
			while(x <= i) {
				System.out.print(" ");
				x++;
			}
	
			while(j <= i) {
				System.out.print("*");
				j++;
			}
			
			System.out.println();
			k = k + 1;
		}
		
	}

}
